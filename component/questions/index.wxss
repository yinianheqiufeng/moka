/**index.wxss**/

.container {
  position: relative;
  width: 100%;
  height: 100vh;
  background: url(https://ca.hj388.cn/yc/MiniProgram/images/bg.png) no-repeat 0 0 / 100% 100%;
  overflow: hidden;
}

/* .backgroundimg {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
} */

.sbox {
  width: 200vw;
  margin-top: -80rpx;
}

.subject {
  width: 50%;
  display: inline-block;
}


.questions {
  position: relative;
  margin-top:248rpx;
  width: 90%;
  left: calc(50% - 45%);
  height: 230rpx;
}

.question-head {
  position: absolute;
  width: 552rpx;
  top: -42%;
  height: 168rpx;
  left: calc(50% - 276rpx);
  z-index: 20;
}

.quan {
  position: absolute;
  width: 138rpx;
  height: 146rpx;
  top: 8rpx;
  left: 35.5%;
}

.count {
  font-size: 30px;
  font-weight: bold;
  position: absolute;
  top: 40rpx;
  color: #fff;
  width: 80rpx;
  left: calc(50% - 50rpx);
  text-align: center;
}

.level {
  position: absolute;
  left: 7%;
  color: #70321d;
  top: 42%;
  /* -webkit-text-stroke: 0.6px #087156; */
  font-style: 20px;
  font-weight: bold;
}

.question, .question-total {
  position: absolute;
  display: flex;
  align-items: center;
  color: #70321d;
  font-style: 20px;
  font-weight: bold;
  /* -webkit-text-stroke: 0.6px #aa7000; */
  right: 22%;
  top: 42%;
}

.question-total {
  right: 5%;
}

.question-title {
  position: absolute;
  top: 10%;
  width: 90%;
  height: 30vw;
  display: flex;align-items: center;
  justify-content: center;
  left: calc(50% - 45%);
  color: #fff;
  font-size: 19px;
  font-weight: bold;
  line-height: 1.3;
  text-align: center;
  /* background-color: #ddd; */
}
.que-center{min-height: 45vh;display: flex;flex-direction: column;
  justify-content: center;
  /* background-color: #ddd; */
  align-items: center;}
.answer {
  position: relative;
  width: 560rpx;
  height: 120rpx;
  margin: 20rpx auto ;
  color: #70321d;
  text-align: center;
  vertical-align: center;
  background-image: url('https://ca.hj388.cn/yc/MiniProgram/images/question/normal.png');
  background-size: 100% 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

.answer.on {
  background-image: url('https://ca.hj388.cn/yc/MiniProgram/images/question/active.png');
}

.answerfont {
  font-size: 19px;
  line-height: 1.2;
  font-weight: bold;
  color: #70321d;
  padding: 0 0 10rpx;
}

.problem {
  width: 231rpx;
  height: 70rpx;
  position: absolute;
  left: 0;
  bottom: 16%;
}

.alive {
  width: 272rpx;
  height: 72rpx;
  position: absolute;
  right: 0;
  bottom: 12%;
}

.alive text {
  position:absolute;
  right:20rpx;
  color:#fff;
  top:8%;
  width:60%;
  height:100%;
  /* -webkit-text-stroke:0.3px #087156; */
  text-shadow: 0.2px 1px #087156;
  font-size:12px;
  font-weight:bold;
  box-sizing:border-box;
  /* background-color:#ddd; */
  letter-spacing: 3rpx;
  text-align:center;
}

.banner {
  position: absolute;
  bottom: 0;
  left: 0;
  overflow: hidden;
  height: 14vh;
  width: 100%;
}

.banner image {
  width: 100%;
}

.wait{
  display: block;
}

.failcenter{
  /* position: absolute;top: 20%; */
  width: 550rpx;
  height: 789rpx;
  /* left: calc(50% - 275rpx); */
}
.threebuttons{
  position: absolute;width: 424rpx;
  /* height: 320rpx; */
  display: flex;
  flex-direction: column;align-content: center;justify-content: center;bottom: 6%;left: calc(50% - 212rpx);
}
.threebuttons button{width: 424rpx;height: 85rpx;margin: 20rpx auto;}
.mask-btn1 text{
  position: absolute;
  left: 56%;
  top: 5%;
  font-size: 14px;
  color: #2d816a;
  
}



.wait .kuang{
  width: 550rpx;
  height: 751rpx;
}

.wait .mask-btn1{
  position: absolute;
  bottom: 22%;
  width: 424rpx;height: 85rpx;
  z-index: 20;
  left: calc(50% - 212rpx);
}
.wait .mask-btn2{
  position: absolute;
  bottom: 8%;
  width: 424rpx;height: 85rpx;
  z-index: 20;
  left: calc(50% - 212rpx);
}

.count-box{
  position: absolute;
  top: 20%;
  left: calc(50% - 72rpx);
}

.timebg{
  width: 143rpx;
  height: 148rpx;
}

.wait-quan{
  width: 127rpx;
  height: 135rpx;
  position: absolute;
  top: 3%;
  left: 5%;
}

.count-box text{
  position: absolute;
  top: 38%;
  left: 25%;
  font-size: 14px;
  font-weight: bold;
  color: #fff;
}

.livecard text{
  text-align: center;
  display: block;
  font-size: 16px;
  font-weight: bold;
  color: #fff570;
  margin: 0 0 10px;
}
.card{
  width: 440rpx;
  height: 664rpx;
}

.close-card{
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 20px auto;
}

.close-help{
  position:absolute;
  top:-60rpx;
  right:0;
  width: 60rpx;
  height: 60rpx;
  display: block;
}

.success-k{
  width: 685rpx;
  height: 837rpx;
}

.you{
  font-size: 36px;
  color: #c63b3b;
  font-weight: bold;
  text-align: center;
  position: absolute;
  top: 35%;
  width: 100%;
}
.suc-btns{
  position: absolute;
  left: 0;
  bottom: 8%;
  width: 100%;
}
.continue,.xz{
  width: 450rpx;
  height: 110rpx;
  margin: 0 auto 20rpx;
}
.continue image,
.xz image{width: 100%;height: 100%;}

@media screen and (min-height: 684px) {
 .sbox{
   margin-top: 80rpx;
 }
 .alive{
   bottom: 15%;
 }
}