.coupon-single{
  width: 100%;
  background: #fb7e5e;
  color:#fff;
  position: relative;
  min-height: 120rpx;
}
.coupon-single .flex{width: 100%;padding: 20rpx 0 ;}
.money{display: flex;justify-content:center;text-align:center;align-items: center;font-size: 28px;border-right: 1px dashed red;padding-right: 20rpx;}
.micon{font-size: 14px;margin-right: -10px;}
.gift-img{width: 80rpx;height: 80rpx;margin-left: 20rpx;}
.right{width: 50%;text-align: center;padding: 0rpx 0 0 20rpx;position: relative;display: flex;align-items: center;font-size: 16px;}
.use{position: absolute;width:168rpx;height: 61rpx;right: 10rpx;top: 30rpx;transform: scale(.8);}
.cbottom{position: relative;border-top:1px dashed #fff ;padding:20rpx;transition: border .3s;}
.cbottom.on{border-color: transparent;}
.coupon-content{font-size: 14px;margin-top: -10rpx;display: flex;justify-content: flex-start;transition:height .2s;}
.coupon-content.on{height: 0;overflow: hidden;}
.carrow{position: absolute;width:36rpx;height:36rpx;right: 16rpx;top: 6rpx;transition: transform .1s;}
.carrow.on{transform: rotate(180deg);}

