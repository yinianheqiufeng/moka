.user{
  position: absolute;
  top: 29vw;
  left: 12.5%;
  width: 75%;
  justify-content: space-between;
  align-items: center;
}

.left{ 
  display: flex;
  align-items: center;
}

.altarimg {
  
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2px solid #b12731;
}
.nickname text{
  display: block;
}
.lv{
  width: 100rpx;
  border: 1px solid #a18500;
  background: #ffed5b;
  box-shadow:  0 -1px 3px #a18500 inset;
  border-radius: 3px;
  text-align: center;
  font-size: 10px;
  color: #b12731;
}
.name{
  font-size: 12px;
  color: #333;
  width: 180rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin: 6rpx 0 0;
}

.current {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #793916;
  font-weight: bold;
}

.oilnum{
  color: #fd1630;
}
.duihuan-buttons{width: 529rpx;height: 128rpx;margin: 50rpx auto 0; margin-top: 18vh;
display: flex;align-items: flex-start;justify-content: space-between;}
.button1,
.button2,
.button3,
.button4{width: calc(107rpx * 1.3);height:calc(137rpx * 1.3);}
/* .button2{width: 107rpx;height:137rpx;}
.button3{width: 107rpx;height:137rpx;}
.button4{width: 107rpx;height:137rpx;} */
.duihuan-bar{width:529rpx;height:66rpx;margin: 5vh auto 6%;display: flex;align-items: center;}


.myprize {
  width: 624rpx;
  height: 680rpx;
  margin: 0 auto;
  position: relative;
}

.myprize-img {
  width: 100%;
  height: 100%;
}

.coupon-wrap {
  position: absolute;
  bottom: 5.5%;
  width: 600rpx;
  height: 90%;
  left: calc(50% - 300rpx);
}

.coupon-list {
  /* width: 88%; */
  width:100%;
  margin: 0 auto;
  justify-content: space-between;
  flex-wrap: wrap;
}

.coupon-item {
  width: 49%;
  /* width:45%; */
  height: 220rpx;
  margin-bottom: 16rpx;
  text-align: center;
}

.coupon {
  width: 100%;
}

.title{
  font-size: 20px;
  font-weight: bold;
  color: #fff;
  display: block;
  text-align: center;
  margin: 20rpx auto;
}

.content{
  font-size: 14px;
  font-weight: bold;
  color: #fff;
  line-height: 1.3;
  text-indent: 10rpx;
}
.coupon-item button{background: #fff;color: #fff;}

.mask-window{
     width: 526rpx;height: 670rpx;
     background: url(https://ca.hj388.cn/yc/MiniProgram/images/exchange/duihuan-window.png) no-repeat 0 0 / 100% 100%;
}
.duihuan-button{position: absolute;bottom: 3%;width:283rpx;height: 69rpx;left: calc(50% - 141.5rpx);}
.close{position: absolute;right: -10%;top: -10%;width:65rpx;height: 65rpx;z-index: 20;}
.scroller{
  width: 80%;
  margin: 0 auto;
  height: 70%;
}

@media screen and (min-height: 684px) {
 .user{
   top:34vw;
 }

 .myprize{
    height: 930rpx;
 }

}